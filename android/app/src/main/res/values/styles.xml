<resources>
    <!-- Thème de splash (Android 12+ via SplashScreen API) -->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Couleur de fond de l'écran de splash -->
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <!-- Icône (utilise ton icône d’app) -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- Thème appli après le splash -->
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>

    <!-- Thème principal de l’app -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
